{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET: Server",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/src/GenerateAndChill.Server/GenerateAndChill.Server.csproj"
    },
    {
      "type": "node-terminal",
      "name": ".NET: React web app",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/src/GenerateAndChill.Client",
      "env": {
        "API_URL": "http://localhost:5012"
      }
    },
    {
      "type": "node-terminal",
      "name": ".NET: SWA CLI",
      "request": "launch",
      "command": "swa start",
      "cwd": "${workspaceFolder}/src/GenerateAndChill.Client"
    }
  ],

  "compounds": [
    {
      "name": ".NET web edition",
      "configurations": [".NET: Server", ".NET: React web app", ".NET: SWA CLI"]
    }
  ]
}
